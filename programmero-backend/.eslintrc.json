{
    "env": {
        "browser": true,
        "commonjs": true,
		"es6": true,
		"jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018
	},
	"globals": {
        "process": true
    },
    "rules": {
        "indent": [
            "error",
            "tab",
            { "SwitchCase": 1 }
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "camelcase": [
            "error",
            {"properties": "always"}
        ],
        "no-trailing-spaces": [
            "error", 
            { "skipBlankLines": true, "ignoreComments": true }
        ],
        "comma-dangle": [
            "error", 
            {
                "arrays": "never",
                "objects": "never",
                "imports": "never",
                "exports": "never",
                "functions": "ignore"
            }
        ]
    }
}