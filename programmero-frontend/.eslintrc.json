{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            "tab",
            { "SwitchCase": 1 }
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "camelcase": [
            "error",
            {"properties": "always"}
        ],
        "no-unused-vars": [
            0, 
            { "varsIgnorePattern": "^h$" }
        ],
        "no-trailing-spaces": [
            "error", 
            { "skipBlankLines": true, "ignoreComments": true }
        ],
        "comma-dangle": [
            "error", 
            {
                "arrays": "never",
                "objects": "never",
                "imports": "never",
                "exports": "never",
                "functions": "ignore"
            }
        ]
    }
}